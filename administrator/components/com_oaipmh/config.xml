<config>
	<params>
		<param name="max" label="Max Results" type="text" default="500" description="Max results per page" />
		<param name="allow_ore" type="radio" default="0" label="Allow ORE" description="Allow metadataPrefix of OAI_ORE in addition to OAI_DC">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		<param name="@spacer" type="spacer" default="" label="" description="" />
		<param name="repository_name" type="text" default="" label="Repository Name" description="full name of the Repository" />
		<param name="base_url" type="text" default="" label="Base URL" description="base URL of the Repository" />
		<param name="email" type="text" default="" label="Admin E-Mail" description="Email address for Repository Admin" />
		<param name="edate" type="text" default="2012-02-12 00:00:00" label="Earliest Datestamp" description="Earliest datestamp in Repository" />
		<param name="del" type="list" default="No" label="Deleted Record" description="Deleted Records">
			<option value="No">No</option>
			<option value="Transient">Transient</option>
			<option value="Persistent">Persistent</option>
		</param>
		<param name="gran" type="list" default="c" label="Harvesting Granularity" description="Finest harvesting granularity">
			<option value="c">YYYY-MM-DDThh:mm:ssZ</option>
			<option value="Y-m-d">YYYY-MM-DD</option>
		</param>
		<param name="@spacer" type="spacer" default="" label="" description="" />
	</params>
</config>
