<config>
	<fieldset name="geodb">
		<field name="geodb_driver" type="text" default="mysql" label="COM_SYSTEM_PARAM_GEODB_DRIVER_LABEL" description="TIPDTATABASETYPE" />
		<field name="geodb_host" type="text" default="localhost" label="COM_SYSTEM_PARAM_GEODB_HOST_LABEL" description="TIPDATABASEHOSTNAME" />
		<field name="geodb_port" type="text" default="" label="COM_SYSTEM_PARAM_GEODB_PORT_LABEL" description="TIPDATABASEPORT" />
		<field name="geodb_user" type="text" default="" label="COM_SYSTEM_PARAM_GEODB_USER_LABEL" description="TIPDATABASEUSERNAME" />
		<field name="geodb_password" type="password" default="" label="COM_SYSTEM_PARAM_GEODB_PASS_LABEL" description="TIPDATABASEPASSWORD" />
		<field name="geodb_database" type="text" default="" label="COM_SYSTEM_PARAM_GEODB_DB_LABEL" description="TIPDATABASENAME" />
		<field name="geodb_prefix" type="text" default="" label="COM_SYSTEM_PARAM_GEODB_PREFIX_LABEL" description="TIPDATABASEPREFIX" />
	</fieldset>
	<fieldset name="ldap">
		<field name="ldap_primary" type="text" default="ldap://localhost" label="COM_SYSTEM_PARAM_LDAP_PRIMARY_LABEL" description="TIPPRIMARYLDAP" />
		<field name="ldap_secondary" type="text" default="" label="COM_SYSTEM_PARAM_LDAP_SECONDARY_LABEL" description="TIPSECONDARYLDAP" />
		<field name="ldap_basedn" type="text" default="" label="COM_SYSTEM_PARAM_LDAP_BASEDN_LABEL" description="TIPLDAPBASEDN" />
		<field name="ldap_searchdn" type="text" default="" label="COM_SYSTEM_PARAM_LDAP_SEARCHDN_LABEL" description="TIPLDAPSEARCHDN" />
		<field name="ldap_searchpw" type="password" default="" label="COM_SYSTEM_PARAM_LDAP_SEARCHPW_LABEL" description="TIPLDAPSEARCHPASSWORD" />
		<field name="ldap_managerdn" type="text" default="" label="COM_SYSTEM_PARAM_LDAP_MANAGERDN_LABEL" description="TIPLDAPMANAGERDN" />
		<field name="ldap_managerpw" type="password" default="" label="COM_SYSTEM_PARAM_LDAP_MANAGERPW_LABEL" description="TIPLDAPMANAGERPASSWORD" />
		<field name="ldap_tls" type="radio" default="0" label="COM_SYSTEM_PARAM_LDAP_TLS_LABEL" description="TIPLDAPTLS">
			<option value="0">JNo</option>
			<option value="1">JYes</option>
		</field>
	</fieldset>
	<fieldset name="api">
		<field name="COM_SYSTEM_PARAM_WHITELIST_LABEL" type="textarea" rows="15" cols="40" default="127.0.0.1" description="COM_SYSTEM_PARAM_WHITELIST_DESC" />
	</fieldset>
</config>

