<install type="module" version="1.5">
	<name>XFlash</name>
	<author>Shawn Rice</author>
	<copyright>Copyright 2005-2011 Purdue University. All rights reserved.</copyright>
	<license>http://www.gnu.org/licenses/lgpl-3.0.html LGPLv3</license>
	<description>Displays HUB flash banner</description>
	<files>
		<filename module="mod_xflash">mod_xflash.php</filename>
		<filename>mod_xflash.js</filename>
		<filename>images/noflash.jpg</filename>
		<filename>index.html</filename>
		<filename>tmpl/index.html</filename>
		<filename>tmpl/default.php</filename>
	</files>
	<params>
		<param name="dynamic" type="radio" default="0" label="Dynamic content" description="Select whether to make banner load xml data or use local swf file">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		<param name="noflash_link" type="text" default="/answers/" label="Default link" description="The URL to be used for linking the default banner image (in case Flash doesn't load)" />
		<param name="noflash_path" type="text" default="/site/xflash/noflash.jpg" label="Path to default image" description="Path to default image (in case Flash doesn't load" />
		<param name="banner_path" type="text" default="/components/com_xflash/flashrotation" label="SWF path" description="Path to swf animation" />
		<param name="cache" type="radio" default="0" label="Enable Cache" description="Select whether to cache the content of this module">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
	</params>
</install>

