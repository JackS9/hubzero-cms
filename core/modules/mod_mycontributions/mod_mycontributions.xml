<extension version="1.5.0" client="site" type="module">
	<name>mod_mycontributions</name>
	<author>HUBzero</author>
	<copyright>Copyright 2005-2015 HUBzero Foundation, LLC.</copyright>
	<license>http://www.gnu.org/licenses/lgpl-3.0.html LGPLv3</license>
	<description>MOD_MYCONTRIBUTIONS_XML_DESCRIPTION</description>
	<files>
		<filename module="mod_mycontributions">mod_mycontributions.php</filename>
		<filename>index.html</filename>
		<filename>helper.php</filename>
		<filename>tmpl/index.html</filename>
		<filename>tmpl/default.php</filename>
		<filename>assets/img/attention.gif</filename>
		<filename>assets/img/check.gif</filename>
		<filename>assets/img/draft.gif</filename>
		<filename>assets/img/pending.gif</filename>
		<filename>assets/img/qanda.gif</filename>
		<filename>assets/img/warning.gif</filename>
		<filename>assets/img/wheel.gif</filename>
		<filename>assets/img/wishlist.gif</filename>
		<filename>assets/css/mod_mycontributions.css</filename>
	</files>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="moduleclass_sfx" type="text" default="" label="MOD_MYCONTRIBUTIONS_PARAM_CLASS_LABEL" description="MOD_MYCONTRIBUTIONS_PARAM_CLASS_DESC" />
				<field name="show_tools" type="radio" default="1" label="MOD_MYCONTRIBUTIONS_PARAM_SHOWTOOLS_LABEL" description="MOD_MYCONTRIBUTIONS_PARAM_SHOWTOOLS_DESC" member_dashboard="1">
					<option value="0">JNo</option>
					<option value="1">JYes</option>
				</field>
				<field name="get_questions" type="radio" default="1" label="MOD_MYCONTRIBUTIONS_PARAM_GETQUESTIONS_LABEL" description="MOD_MYCONTRIBUTIONS_PARAM_GETQUESTIONS_DESC" member_dashboard="1">
					<option value="0">JNo</option>
					<option value="1">JYes</option>
				</field>
				<field name="get_wishes" type="radio" default="1" label="MOD_MYCONTRIBUTIONS_PARAM_GETWISHES_LABEL" description="MOD_MYCONTRIBUTIONS_PARAM_GETWISHES_DESC" member_dashboard="1">
					<option value="0">JNo</option>
					<option value="1">JYes</option>
				</field>
				<field name="get_tickets" type="radio" default="1" label="MOD_MYCONTRIBUTIONS_PARAM_GETTICKETS_LABEL" description="MOD_MYCONTRIBUTIONS_PARAM_GETTICKETS_DESC" member_dashboard="1">
					<option value="0">JNo</option>
					<option value="1">JYes</option>
				</field>
				<field name="limit_tools" type="text" size="6" default="10" label="MOD_MYCONTRIBUTIONS_PARAM_LIMITTOOLS_LABEL" description="MOD_MYCONTRIBUTIONS_PARAM_LIMITTOOLS_DESC" member_dashboard="1" />
				<field name="limit_other" type="text" size="6" default="10" label="MOD_MYCONTRIBUTIONS_PARAM_LIMITOTHER_LABEL" description="MOD_MYCONTRIBUTIONS_PARAM_LIMITOTHER_DESC" member_dashboard="1" />
			</fieldset>
		</fields>
	</config>
</extension>