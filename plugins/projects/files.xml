<install version="1.5" type="plugin" group="projects">
	<name>Projects - Files</name>
	<author>Alissa Nedossekina</author>
	<copyright>Copyright 2005-2009 by Purdue Research Foundation, West Lafayette, IN 47906</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GPLv2</license>
	<description>Manage project files</description>
	<files>
		<filename plugin="files">files.php</filename>
	</files>
	<languages>
		<language tag="en-GB">en-GB.plg_projects_files.ini</language>
	</languages>
	<params>
		<param name="display_limit" type="text" size="5" default="50" label="Display Limit" description="Number of items to return"/>
		<param name="maxUpload" type="text" menu="hide" default="104857600" label="Max file upload (bytes)" description="Maximum upload file size for project files in bites (master default set to 100MB (104857600 bytes))" />
		<param name="maxDownload" type="text" menu="hide" default="104857600" label="Max size for batch download (bytes)" description="Maximum download file size for zipped project files in bites (master default set to 100MB (104857600 bytes))" />
		<param name="tempPath" type="text" menu="hide" default="/site/projects/temp" label="Temp file directory" description="File path for storing temp files during batch download" />
		<param name="reservedNames" type="text" menu="hide" default="google , dropbox, shared, temp" label="Reserved directory names" description="Reserved directory names" />
		<param name="connectedProjects" type="text" menu="hide" default="" label="Connected projects" description="Comma-separated aliases of projects that may connect to outside services (empty means all projects may connect)" />
		<param name="@spacer" type="spacer" default="" label="" description="" />
		<param name="enable_google" type="radio" default="0" label="Google Connection Enabled" description="Allow projects to connect with Google docs">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		<param name="google_clientId" type="text" menu="hide" default="" label="Google client ID" description="Google client ID" />
		<param name="google_clientSecret" type="text" menu="hide" default="" label="Google client Secret" description="Google client Secret" />
		<param name="google_appKey" type="text" menu="hide" default="" label="Google app key" description="Google app key" />
		<param name="google_folder" type="text" menu="hide" default="Google" label="Local Google folder" description="Name of local google folder" />
		<param name="@spacer" type="spacer" default="" label="" description="" />
		<param name="enable_dropbox" type="radio" default="0" label="Dropbox Connection Enabled" description="Allow projects to connect with Dropbox">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		<param name="dropbox_key" type="text" menu="hide" default="" label="Dropbox app key" description="Dropbox app key" />
		<param name="dropbox_secret" type="text" menu="hide" default="" label="Dropbox app secret" description="Dropbox app secret" />
		<param name="dropbox_folder" type="text" menu="hide" default="Dropbox" label="Local Dropbox folder" description="Name of local dropbox folder" />
		<param name="@spacer" type="spacer" default="" label="" description="" />
		<param name="sync_lock" type="list" default="0" label="Sync lock (in minutes)" description="Disallow repeated sync within specified period after last sync">
			<option value="0">0</option>
			<option value="1">1</option>
			<option value="2">2</option>
			<option value="3">3</option>
			<option value="5">5</option>
			<option value="10">10</option>
		</param>
		<param name="auto_sync" type="list" default="0" label="Auto sync" description="Initiate new sync automatically within specified time period after previous sync">
			<option value="0">No auto sync</option>
			<option value="0.15">Every 10 minutes</option>
			<option value="0.5">Every half hour</option>
			<option value="1">Every hour</option>
			<option value="2">Every 2 hours</option>
			<option value="6">Every 6 hours</option>
		</param>
		<param name="latex" type="radio" default="0" label="Enable LaTeX" description="Enable LaTeX compile">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		<param name="texpath" type="text" menu="hide" default="" label="Path to LaTeX" description="Path to LaTeX" />
		<param name="gspath" type="text" menu="hide" default="" label="Path to Ghostscript" description="Path to Ghostscript" />
		<param name="@spacer" type="spacer" default="" label="" description="" />
		<param name="helplink" type="text" menu="hide" default="" label="Interface help link" description="URL to page describing interface features" />
		<param name="@spacer" type="spacer" default="" label="" description="" />
	</params>
</install>