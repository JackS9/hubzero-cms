<install version="1.5" type="plugin" group="groups">
	<name>Projects - Publications</name>
	<author>Alissa Nedossekina</author>
	<copyright>Copyright 2005-2009 by Purdue Research Foundation, West Lafayette, IN 47906</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GPLv2</license>
	<description>Display and manage project publications</description>
	<files>
		<filename plugin="publications">publications.php</filename>
	</files>
	<languages>
		<language tag="en-GB">en-GB.plg_projects_publications.ini</language>
	</languages>
	<params>
		<param name="display_limit" type="text" size="5" default="50" label="Display Limit" description="Number of items to return"/>
		<param name="required_areas" type="text" menu="hide" default="content, description, authors, license" label="Required fields" description="Publication info areas required for publication" />
		<param name="updatable_areas" type="text" menu="hide" default="" label="Updatable fields" description="Publication info areas that may be updated after version release" />	
		<param name="image_types" type="text" menu="hide" default="jpg, jpeg, gif, png" label="Gallery image formats" description="Allowable image types for gallery" />	
		<param name="video_types" type="text" menu="hide" default="avi, mpeg, mov, mpg, wmv, rm, mp4" label="Gallery video formats" description="Allowable video types for gallery" />
	</params>
</install>