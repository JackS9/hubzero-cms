<install version="1.5" type="plugin" course="courses">
	<name>Courses - Store</name>
	<author>HUBzero</author>
	<creationDate>February 2013</creationDate>
	<copyright>Copyright 2005-2011 Purdue University. All rights reserved.</copyright>
	<license>http://www.gnu.org/licenses/lgpl-3.0.html LGPLv3</license>
	<authorEmail>support@hubzero.org</authorEmail>
	<version>1.5</version>
	<description>Handles course to store data</description>
	<files>
		<filename plugin="store">store.php</filename>
	</files>
	<languages>
		<language tag="en-GB">en-GB.plg_courses_store.ini</language>
	</languages>
	<params>
		<param name="some_thing" type="list" default="1" label="Some thing" description="Enable/Disable some thing">
			<option value="0">Disabled</option>
			<option value="1">Enabled</option>
		</param>
	</params>
	<params group="onOfferingEdit">
		<param name="store_product" type="radio" default="0" label="Add to store" description="Add a product entry to the store for this course?">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		<param name="store_price" type="text" size="5" default="30.00" label="Price ($)" description="The price of the course" />
		<param name="store_membership_duration" type="list" default="1 YEAR" label="Membership duration" description="How long does membership last?">
			<option value="1 WEEK">1 week</option>
			<option value="2 WEEKS">2 weeks</option>
			<option value="3 WEEKS">3 weeks</option>
			<option value="1 MONTH">1 month</option>
			<option value="3 MONTHS">3 months</option>
			<option value="6 MONTHS">6 months</option>
			<option value="1 YEAR">1 year</option>
		</param>
	</params>
</install>
