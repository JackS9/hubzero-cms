<install version="1.5" type="plugin" group="hubzero">
	<name>User - Constant Contact</name>
	<description>Syncs Members to Constant Contact</description>
	<files>
		<filename plugin="constantcontact">constantcontact.php</filename>
	</files>
	<params>
		<param type="list" name="ccManageEmailPreference" label="Send Member Email Preferences:" default="0">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		<param type="spacer" />
		<param name="ccUsername" type="text" default="" label="Constant Contact Username:" description="Username from Constant Contact" />
		<param name="ccPassword" type="password" default="" label="Constant Contact Password:" description="Password from Constant Contact" />
		<param name="ccApiKey" type="text" default="" label="Constant Contact Api Key:" description="API Key from Constant Contact" />
	</params>
</install>